<% if @videos.empty? then %>
  <h3>
    Sorry please try again
  </h3>
<% else %>
  <h3>
    <%=@videos.length%> videos found
  </h3>
  <ul id="results">
    <% @videos.each { |video| %>
      <li class="video" id="video_<%=video.remote_id%>">
        <table>
          <tr>
            <td>
              <%=link_to(image_tag(video.image_url, {:width => "120"}), "#", {:title => video.title})%>
            </td>
            <td>
              <p>
                "<%=link_to(video.title, preview_url(video.remote_id), {:target => :_blank})%>"
                -
                <%=video.artist_names.join(",")%>
                <%=video.formatted_duration%>
              </p>
              <%=hidden_field_tag("episode[videos][]",  video.to_yaml, {:id => nil})%>
            </td>
          </tr>
        </table>
      </li>
    <% } %>
  </ul>
<% end %>
