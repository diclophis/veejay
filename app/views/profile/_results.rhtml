<ul id="results">
  <% if @videos.empty? then %>
    <li id="flash" class="notice">
      <h4>
        <%=@videos.length%> videos found
      </h4>
    </li>
  <% else %>
    <li id="flash" class="success">
      <h4>
        <%=@videos.length%> videos found
      </h4>
    </li>
    <% @videos.each { |video| %>
      <%=render({:partial => "shared/remote_video", :locals => {:remote_video => video, :comment => ""}})%>
    <% } %>
  <% end %>
</ul>
